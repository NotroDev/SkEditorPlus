<Application x:Class="SkEditorPlus.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             Startup="Application_Startup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <hc:ThemeResources RequestedTheme="Dark"/>
                <hc:Theme/>

                <ResourceDictionary Source="/Styles/TextEditorStyle.xaml"/>
                <ResourceDictionary Source="/Styles/SearchPanelStyle.xaml"/>
                <ResourceDictionary Source="/Styles/CompletionListStyle.xaml"/>
                <ResourceDictionary Source="/Styles/TabControlStyle.xaml"/>
                <ResourceDictionary Source="/Styles/MessageBoxStyle.xaml"/>
                <ResourceDictionary Source="/Styles/OptionsTabControlStyle.xaml"/>
                <ResourceDictionary Source="/Styles/MenuStyle.xaml"/>
                <ResourceDictionary Source="/Styles/ScrollViewerStyle.xaml"/>
                <ResourceDictionary Source="/Styles/ListBoxStyle.xaml"/>
                <ResourceDictionary Source="/Styles/ButtonStyle.xaml"/>
                <ResourceDictionary Source="/Styles/SmallButtonStyle.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Languages/English.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>