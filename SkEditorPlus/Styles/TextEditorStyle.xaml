<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit">
    <Style x:Key="TextEditorStyle" TargetType="avalonedit:TextEditor">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Background" Value="#1e1e1e" />
        <Setter Property="Foreground" Value="#e6e6e6" />
        <Setter Property="ShowLineNumbers" Value="True" />
        <Setter Property="LineNumbersForeground" Value="#2884a8" />
        <Setter Property="TextElement.FontFamily" Value="{StaticResource CascadiaMono}" />
    </Style>
    <Style TargetType="avalonedit:LineNumberMargin">
        <Setter Property="Margin" Value="0,0,5,0" />
    </Style>
</ResourceDictionary>